<?xml version="1.0" encoding="UTF-8"?>
<IVRMenu xmlns="http://www.ringcentral.com/schemas/ivrmenu">
  <menu id="main">
    <name>Podcast Hotline</name>
    <language>en-US</language>
    <prompt>
      <type>TextToSpeech</type>
      <text>Welcome to the Podcast Hotline! Your source for on-demand audio content. Press 1 for today's Daily Tech News, Press 2 for Weather and Traffic, Press 3 for Daily Stories, Press 9 to repeat this menu, or Press 0 to speak with a representative.</text>
    </prompt>
    <actions>
      <action key="1">
        <type>Transfer</type>
        <destination>ext-101</destination>
      </action>
      <action key="2">
        <type>Transfer</type>
        <destination>ext-102</destination>
      </action>
      <action key="3">
        <type>Transfer</type>
        <destination>ext-103</destination>
      </action>
      <action key="9">
        <type>Repeat</type>
      </action>
      <action key="0">
        <type>Transfer</type>
        <destination>ext-101</destination>
      </action>
    </actions>
    <timeout>10</timeout>
    <onTimeout>Repeat</onTimeout>
    <onInvalidInput>Repeat</onInvalidInput>
  </menu>
</IVRMenu>