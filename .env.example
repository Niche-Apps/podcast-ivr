# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Weather API (get free key from openweathermap.org)
WEATHER_API_KEY=your_weather_api_key

# Railway deployment URL
BASE_URL=https://podcast-ivr-production.up.railway.app
WEBHOOK_URL=https://podcast-ivr-production.up.railway.app/webhook

# Port
PORT=3000

# Google Cloud TTS Configuration (Optional - will use free tier without credentials)
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json
TTS_VOICE_NAME=en-GB-Neural2-B
TTS_LANGUAGE_CODE=en-GB

# Optional: Main phone number for transfers
MAIN_PHONE_NUMBER=+1234567890

# Railway URL will be set automatically by Railway