{
  "name": "podcast-ivr-launcher",
  "version": "1.0.0",
  "description": "Launcher for Podcast IVR Manager",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.podcastivr.launcher",
    "productName": "Podcast IVR Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    }
  }
}